#!/usr/bin/env sh
#
# Works best with blinking text: the last heart will blink when you have less
# than 25% of your battery life remaining.
#
# Add the following to your `~/.tmux.conf`;
#
#     set -g status-right "#[fg=red]#(path/to/zelda-battery-tmux.sh) "
#
# Original script by https://github.com/stephencelis
#
# Modified by https://github.com/majjoha

battery="$(pmset -g ps | awk 'NR==2' | perl -pe 's/.*?(\d+)%.*/\1/')"

if [[ $battery -le 10 ]]; then
  echo "#[fg=red]#[blink]â™¥#[noblink] $battery%"
else
  echo "#[fg=blue]$battery%"
fi
