[user]
	name = majjoha
	email = mathias@mjj.io
[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[credential]
	helper = osxkeychain
[github]
	user = majjoha
[branch]
	autosetupmerge = true
[alias]
	ds = diff --staged
	standup = log --since '1 day ago' --oneline --author mathias@mjj.io
	undo = reset --soft HEAD^
	graph = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
	st = status
	di = diff
	co = checkout
	ci = commit
	br = branch
	sta = stash
	llog = log --date=local
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	unstage = reset HEAD
	uncommit = reset --soft HEAD^
  unpushed = log --branches --not --remotes --simplify-by-decoration --decorate --oneline
  last-week = log --author=majjoha --no-commit-id --since='1 week ago' --all --no-merges
  branch-name = !"git for-each-ref --format=\"%(refname:short)\" $(git symbolic-ref HEAD)"
  zpush = !"git push -u origin `git branch-name`:majjoha/`git branch-name`"
[core]
	editor = vim
  excludesfile = ~/.gitignore
[apply]
	whitespace = nowarn
[push]
	default = upstream
[rerere]
	enabled = true
[heroku]
	account = personal
