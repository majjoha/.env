[user]
	name = majjoha
	email = mathias@mjj.io
[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = auto
[credential]
	helper = osxkeychain
[github]
	user = majjoha
[branch]
	autosetupmerge = true
[alias]
  br = branch
  branch-name = !"git for-each-ref --format=\"%(refname:short)\" $(git symbolic-ref HEAD)"
  ci = commit
  co = checkout
  di = diff
  ds = diff --staged
  dump = cat-file -p
  g = grep --break --heading --line-number
  graph = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  last-week = log --author=majjoha --no-commit-id --since='1 week ago' --all --no-merges
  llog = log --date=local
  preview = !"git fetch && git diff ^origin/master"
  st = status
  sta = stash
  standup = log --since '1 day ago' --oneline --author mathias@mjj.io
  type = cat-file -t
  uncommit = reset --soft HEAD^
  undo = reset --soft HEAD^
  undo = reset HEAD~1 --mixed
  unpushed = log --branches --not --remotes --simplify-by-decoration --decorate --oneline
  unstage = reset HEAD
  wip = !git add -u && git commit -m "wip"
  zpush = !"git push -u origin `git branch-name`:majjoha/`git branch-name`"
[core]
	editor = vim
  excludesfile = ~/.gitignore
[apply]
	whitespace = nowarn
[push]
	default = upstream
[rerere]
	enabled = true
[heroku]
	account = personal
